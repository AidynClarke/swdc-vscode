{
    "name": "music-time",
    "displayName": "Music Time",
    "version": "0.1.10",
    "publisher": "softwaredotcom",
    "description": "Music Time is an open source plugin that curates and launches playlists for coding right from your editor.",
    "author": {
        "name": "Software.com"
    },
    "license": "SEE LICENSE IN LICENSE",
    "icon": "images/app-icon-blue.png",
    "galleryBanner": {
        "color": "#384356",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/swdotcom/swdc-vscode"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "time tracking",
        "productivity",
        "timer",
        "git",
        "spotify"
    ],
    "activationEvents": [
        "*"
    ],
    "engines": {
        "vscode": "^1.19.0"
    },
    "main": "./out/extension",
    "scripts": {
        "prebuildcodetime": "node deployer code-time && tsc -watch -p ./",
        "prebuildmusictime": "node deployer music-time && tsc -watch -p ./",
        "musictime-package": "node deployer music-time && tsc -p ./",
        "codetime-package": "node deployer ode-time && tsc -p ./",
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./"
    },
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Code Time",
            "properties": {
                "showMusicMetrics": {
                    "type": "boolean",
                    "default": false,
                    "description": "Music metrics"
                },
                "showGitMetrics": {
                    "type": "boolean",
                    "default": false,
                    "description": "Git metrics"
                },
                "showWeeklyRanking": {
                    "type": "boolean",
                    "default": false,
                    "description": "Weekly Ranking"
                }
            }
        },
        "commands": [
            {
                "command": "musictime.next",
                "title": "Play Next Song"
            },
            {
                "command": "musictime.previous",
                "title": "Play Previous Song"
            },
            {
                "command": "musictime.play",
                "title": "Play"
            },
            {
                "command": "musictime.pause",
                "title": "Pause"
            },
            {
                "command": "musictime.like",
                "title": "Like Song"
            },
            {
                "command": "musictime.unlike",
                "title": "Unlike Song"
            },
            {
                "command": "musictime.menu",
                "title": "Click to see more from Music Time"
            },
            {
                "command": "musictime.currentSong",
                "title": "Click to view track"
            },
            {
                "command": "musictime.connectSpotify",
                "title": "Connect your Spotify account",
                "tooltip": "Connect your Spotify account to view your playlists"
            },
            {
                "command": "musictime.refreshPlaylist",
                "title": "Refresh",
                "icon": {
                    "light": "resources/light/refresh.svg",
                    "dark": "resources/dark/refresh.svg"
                }
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "extension.codeTimeMetrics"
                },
                {
                    "command": "extension.softwareKpmDashboard",
                    "when": "codetime:loggedIn"
                },
                {
                    "command": "extension.viewSoftwareTop40",
                    "when": "config.showMusicMetrics"
                },
                {
                    "command": "extension.codeTimeLogin",
                    "when": "!codetime:loggedIn"
                },
                {
                    "command": "extension.codeTimeStatusToggle"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "music-time",
                    "title": "Music Time",
                    "icon": "resources/dark/paw.svg"
                }
            ]
        },
        "views": {
            "music-time": [
                {
                    "id": "music-time-playlists",
                    "name": "Playlists"
                }
            ]
        }
    },
    "devDependencies": {
        "@types/mocha": "5.2.6",
        "@types/node": "12.0.0",
        "typescript": "^3.4.5",
        "@types/vscode": "^1.32.0"
    },
    "dependencies": {
        "cody-music": "2.4.0",
        "vsls": "0.3.1291",
        "axios": "^0.19.0"
    }
}