{
  "name": "swdc-vscode",
  "displayName": "Code Time",
  "version": "2.4.0",
  "publisher": "softwaredotcom",
  "description": "Code Time is an open source plugin that provides programming metrics right in Visual Studio Code.",
  "author": {
    "name": "Software.com"
  },
  "license": "SEE LICENSE IN LICENSE",
  "icon": "images/app-icon-blue.png",
  "galleryBanner": {
    "color": "#384356",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/swdotcom/swdc-vscode"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "code time",
    "time tracker",
    "productivity tracker",
    "project tracker",
    "timer"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "engines": {
    "vscode": "^1.35.0"
  },
  "main": "./dist/extension",
  "scripts": {
    "compile": "tsc -p ./",
    "lint": "tslint -p ./",
    "watch": "tsc -watch -p ./",
    "build": "vsce package --yarn",
    "vscode:prepublish": "webpack --mode production",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "test-compile": "tsc -p ./"
  },
  "contributes": {
    "commands": [
      {
        "command": "codetime.generateProjectSummary",
        "title": "Code Time: View project summary"
      },
      {
        "command": "codetime.softwareKpmDashboard",
        "title": "Code Time: See advanced metrics"
      },
      {
        "command": "codetime.displayReadme",
        "title": "Code Time: Learn more"
      },
      {
        "command": "codetime.disconnectSlackWorkspace",
        "title": "Code Time: Disconnect Slack workspace",
        "icon": {
          "light": "resources/light/remove.svg",
          "dark": "resources/dark/remove.svg"
        }
      },
      {
        "command": "codetime.connectSlackWorkspace",
        "title": "Code Time: Add Slack workspace",
        "icon": {
          "light": "resources/light/add.svg",
          "dark": "resources/dark/add.svg"
        }
      },
      {
        "command": "codetime.refreshFlowTree",
        "title": "Code Time: Refresh flow info",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "codetime.viewDashboard",
        "title": "Code Time: View Dashboard"
      },
      {
        "command": "codetime.enableFlow",
        "title": "Code Time: Enable Flow Mode"
      },
      {
        "command": "codetime.pauseFlow",
        "title": "Code Time: Pause Flow Mode"
      }
    ],
    "configuration": [
      {
        "type": "object",
        "title": "Code Time",
        "properties": {
          "slackAwayStatus": {
            "type": "boolean",
            "default": true,
            "description": "Automatically set my status away when I'm in flow"
          },
          "slackAwayStatusText": {
            "type": "string",
            "default": "CodeTime!",
            "description": "Customize your away status in Slack"
          },
          "pauseSlackNotifications": {
            "type": "boolean",
            "default": true,
            "description": "Automatically pause Slack notifications when I'm in flow"
          },
          "screenMode": {
            "type": "string",
            "enum": [
              "Zen",
              "Full Screen",
              "None"
            ],
            "default": "Full Screen",
            "description": "Automatically toggle a selected screen mode when I'm in flow"
          }
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "code-time",
          "title": "Code Time",
          "icon": "resources/dark/paw-outlined.svg"
        }
      ]
    },
    "views": {
      "code-time": [
        {
          "id": "ct-menu-tree",
          "name": "ACCOUNT"
        },
        {
          "id": "ct-flow-tree",
          "name": "FLOW"
        },
        {
          "id": "ct-metrics-tree",
          "name": "STATS"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "codetime.disconnectSlackWorkspace",
          "when": "viewItem =~ /.*slack_connection_node.*/",
          "group": "inline@1"
        },
        {
          "command": "codetime.connectSlackWorkspace",
          "when": "viewItem =~ /.*slack_connection_parent.*/",
          "group": "inline@1"
        }
      ],
      "view/title": [
        {
          "command": "codetime.refreshFlowTree",
          "group": "navigation@1",
          "when": "view =~ /ct-flow-tree/"
        }
      ]
    }
  },
  "devDependencies": {
    "@types/mocha": "^7.0.2",
    "@types/node": "12.0.4",
    "@types/vscode": "^1.35.0",
    "copy-webpack-plugin": "^6.0.1",
    "file-loader": "^6.0.0",
    "ts-loader": "^6.2.1",
    "typescript": "^3.5.1",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "yarn-check-webpack-plugin": "^1.2.0"
  },
  "dependencies": {
    "@slack/web-api": "^5.14.0",
    "@types/jwt-decode": "^2.2.1",
    "axios": "^0.21.1",
    "clipboardy": "^2.1.0",
    "file-it": "^1.0.24",
    "jwt-decode": "^2.2.0",
    "moment-timezone": "^0.5.25",
    "node-cache": "^5.1.0",
    "numeral": "^2.0.6",
    "open": "^6.4.0",
    "query-string": "^6.13.7",
    "swdc-tracker": "^1.4.3",
    "uuid": "^8.3.1",
    "vsls": "0.3.1291"
  }
}
