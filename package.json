{
    "name": "music-time",
    "displayName": "Music Time",
    "version": "0.1.25",
    "publisher": "softwaredotcom",
    "description": "Music Time is an open source plugin that curates and launches playlists for coding right from your editor.",
    "author": {
        "name": "Software.com"
    },
    "license": "SEE LICENSE IN LICENSE",
    "icon": "images/app-icon-blue.png",
    "galleryBanner": {
        "color": "#384356",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/swdotcom/swdc-vscode"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "time tracking",
        "productivity",
        "timer",
        "git",
        "spotify"
    ],
    "activationEvents": [
        "*"
    ],
    "engines": {
        "vscode": "^1.35.0"
    },
    "main": "./out/extension",
    "scripts": {
        "prebuildcodetime": "node deployer code-time && tsc -watch -p ./",
        "prebuildmusictime": "node deployer music-time && tsc -watch -p ./",
        "musictime-package": "node deployer music-time && vsce package",
        "codetime-package": "node deployer code-time && vsce package",
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./"
    },
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Code Time",
            "properties": {
                "showMusicMetrics": {
                    "type": "boolean",
                    "default": false,
                    "description": "Music metrics"
                },
                "showGitMetrics": {
                    "type": "boolean",
                    "default": false,
                    "description": "Git metrics"
                },
                "showWeeklyRanking": {
                    "type": "boolean",
                    "default": false,
                    "description": "Weekly Ranking"
                }
            }
        },
        "commands": [
            {
                "command": "musictime.next",
                "title": "Play Next Song"
            },
            {
                "command": "musictime.previous",
                "title": "Play Previous Song"
            },
            {
                "command": "musictime.play",
                "title": "Play",
                "icon": {
                    "light": "resources/light/play-button.svg",
                    "dark": "resources/dark/play-button.svg"
                }
            },
            {
                "command": "musictime.pause",
                "title": "Pause",
                "icon": {
                    "light": "resources/light/pause-button.svg",
                    "dark": "resources/dark/pause-button.svg"
                }
            },
            {
                "command": "musictime.itunesPlaylist",
                "title": "iTunes",
                "icon": {
                    "light": "resources/light/icons8-itunes.svg",
                    "dark": "resources/dark/icons8-itunes.svg"
                }
            },
            {
                "command": "musictime.spotifyPlaylist",
                "title": "Spotify",
                "icon": {
                    "light": "resources/light/icons8-spotify.svg",
                    "dark": "resources/dark/icons8-spotify.svg"
                }
            },
            {
                "command": "musictime.like",
                "title": "Like Song"
            },
            {
                "command": "musictime.unlike",
                "title": "Unlike Song"
            },
            {
                "command": "musictime.menu",
                "title": "Click to see more from Music Time"
            },
            {
                "command": "musictime.currentSong",
                "title": "Click to view track"
            },
            {
                "command": "musictime.connectSpotify",
                "title": "Connect your Spotify account",
                "tooltip": "Connect your Spotify account to view your playlists"
            },
            {
                "command": "musictime.disconnectSpotify",
                "title": "Disconnect your Spotify account",
                "tooltip": "Disconnect your Spotify account"
            },
            {
                "command": "musictime.refreshPlaylist",
                "title": "Refresh"
            },
            {
                "command": "musictime.refreshSettings",
                "title": "Refresh"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "music-time",
                    "title": "Music Time",
                    "icon": "resources/dark/headphone-symbol.svg"
                }
            ]
        },
        "views": {
            "music-time": [
                {
                    "id": "music-time-playlists",
                    "name": "Playlists"
                },
                {
                    "id": "music-time-settings",
                    "name": "Settings"
                }
            ]
        },
        "menus": {
            "view/item/context": [
                {
                    "command": "musictime.play",
                    "when": "view == music-time-playlists && viewItem == paused",
                    "group": "inline"
                },
                {
                    "command": "musictime.pause",
                    "when": "view == music-time-playlists && viewItem == playing",
                    "group": "inline"
                }
            ],
            "view/title": [
                {
                    "command": "musictime.itunesPlaylist",
                    "group": "navigation@1",
                    "when": "view == music-time-playlists && treeview-type == itunes"
                },
                {
                    "command": "musictime.spotifyPlaylist",
                    "group": "navigation@1",
                    "when": "view == music-time-playlists && treeview-type == spotify"
                }
            ]
        }
    },
    "devDependencies": {
        "@types/mocha": "5.2.6",
        "@types/node": "12.0.4",
        "typescript": "^3.5.1",
        "@types/vscode": "^1.35.0"
    },
    "dependencies": {
        "aws-sdk": "^2.470.0",
        "axios": "^0.19.0",
        "cody-music": "2.6.1",
        "moment-timezone": "^0.5.25",
        "vsls": "0.3.1291"
    }
}