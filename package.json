{
    "name": "swdc-vscode",
    "displayName": "Code Time",
    "version": "0.5.53",
    "publisher": "softwaredotcom",
    "description": "Code Time is an open source plugin that provides programming metrics right in Visual Studio Code.",
    "author": {
        "name": "Software.com"
    },
    "license": "SEE LICENSE IN LICENSE",
    "icon": "images/app-icon-blue.png",
    "galleryBanner": {
        "color": "#384356",
        "theme": "dark"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/swdotcom/swdc-vscode"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "time tracking",
        "productivity",
        "timer",
        "git",
        "spotify"
    ],
    "activationEvents": [
        "*"
    ],
    "engines": {
        "vscode": "^1.19.0"
    },
    "main": "./out/extension",
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Software.com configuration",
            "properties": {
                "feature.showMusicMetrics": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show music metrics"
                },
                "feature.showCodeTimeMetrics": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show KPM metrics"
                },
                "feature.showGitMetrics": {
                    "type": "boolean",
                    "default": true,
                    "description": "Show Git metrics"
                }
            }
        },
        "commands": [
            {
                "command": "extension.codeTimeDashboard",
                "title": "Code time report",
                "category": "Software.com"
            },
            {
                "command": "extension.softwareKpmDashboard",
                "title": "Go to software.com",
                "category": "Software.com"
            },
            {
                "command": "extension.pauseSoftwareMetrics",
                "title": "Pause metrics",
                "category": "Software.com"
            },
            {
                "command": "extension.enableSoftwareMetrics",
                "title": "Enable metrics",
                "category": "Software.com"
            }
        ],
        "menus": {
            "view/item/context": [
                {
                    "command": "extension.codeTimeDashboard",
                    "group": "Code time report"
                },
                {
                    "command": "extension.softwareKpmDashboard",
                    "group": "Software.com"
                },
                {
                    "command": "extension.pauseSoftwareMetrics",
                    "group": "Software.com"
                },
                {
                    "command": "extension.enableSoftwareMetrics",
                    "group": "Software.com"
                }
            ]
        }
    },
    "devDependencies": {
        "@types/axios": "^0.14.0",
        "@types/node": "^9.4.0",
        "typescript": "^2.8.3"
    },
    "dependencies": {
        "axios": "^0.17.1",
        "itunes-node-applescript": "0.3.5",
        "open": "^0.0.5",
        "spotify-node-applescript": "1.1.1",
        "vscode": "^1.1.28"
    }
}
